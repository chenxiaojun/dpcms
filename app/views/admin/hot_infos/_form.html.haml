= semantic_form_for [:admin, @hot_info] do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs do
    = f.input :source_title, input_html: { disabled: true, class: 'source_title' }
    = f.input :source_type, as: :select, collection: TRANS_HOTINFO_SOURCE_TYPE, prompt: true,
              input_html: { class: 'trigger_search_form' }
    = f.input :source_id, as: :hidden, input_html: { class: 'source_id' }
  = f.actions

%div.sources
  %div.infos.hidden
    %form{class: 'search_infos_form left', action: admin_infos_path(format: :json, per_page: 10), data: { remote: true }}
      %input{name: 'q[title_contains]', type: 'search', id: 'input_search_infos'}
      %input{name: 'submit', type: 'submit', value: '搜索', id: 'btn_search_infos'}
    %table
      %thead
        %tr
          %th 资讯ID
          %th 资讯标题
      %tbody

  %div.videos.hidden
    %form{class: 'search_videos_form left', action: admin_videos_path(format: :json, per_page: 10), data: { remote: true }}
      %input{name: 'q[name_contains]', type: 'search', id: 'input_search_videos'}
      %input{name: 'submit', type: 'submit', value: '搜索', id: 'btn_search_videos'}
    %table
      %thead
        %tr
          %th 视频ID
          %th 视频标题
      %tbody
:javascript
  $(function() {
    HomepageEvent.bindFormEvents();
  });
