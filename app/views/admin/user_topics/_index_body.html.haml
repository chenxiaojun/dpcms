- if resource.long?
  %div= resource.title
  - if resource.cover_link.present?
    = image_tag(resource.cover_link, width: "100%")
- else
  - if resource.body.present?
    %div= sanitize(resource.body.truncate(100))
  - resource.topic_images.each_with_index do |image, index|
    = link_to image.image_path, class: "group group#{resource.id}", title: "Pic #{index + 1}", 'data-group': resource.id do
      = image_tag(image.image_path, width: "32%")
